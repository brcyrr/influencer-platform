generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  INFLUENCER
  BRAND
  ADMIN
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password_hash String
  role          Role
  created_at    DateTime @default(now())

  @@map("users")
}
